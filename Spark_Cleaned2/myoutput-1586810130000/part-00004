ured\n|align=\"left\" |{{sfn|Rohwer|1999|p=23}}\n|-\n|align=\"right\"|18 July 1940\n|align=\"left\" |''U-99''\n|align=\"left\" |''[[List of shipwrecks in July 1940#18 July|Woodbury]]''\n|align=\"left\" |{{flag|United Kingdom|civil}}\n|align=\"right\"|4,434\n|align=\"left\" |Sunk\n|align=\"left\" |{{sfn|Rohwer|1999|p=23}}\n|-\n|align=\"right\"|28 July 1940\n|align=\"left\" |''U-99''\n|align=\"left\" |''[[List of shipwrecks in July 1940#28 July|Auckland Star]]''\n|align=\"left\" |{{flag|United Kingdom|civil}}\n|align=\"right\"|13,212\n|align=\"left\" |Sunk\n|align=\"left\" |{{sfn|Rohwer|1999|p=23}}\n|-\n|align=\"right\"|29 July 1940\n|align=\"left\" |''U-99''\n|align=\"left\" |''[[List of shipwrecks in July 1940#29 July|Clan Menzies]]''\n|align=\"left\" |{{flag|United Kingdom|civil}}\n|align=\"right\"|7,226\n|align=\"left\" |Sunk\n|align=\"left\" |{{sfn|Rohwer|1999|p=24}}\n|-\n|align=\"right\"|31 July 1940\n|align=\"left\" |''U-99''\n|align=\"left\" |''[[List of shipwrecks in July 1940#31 July|Jamaica Progress]]''\n|align=\"left\" |{{flag|United Kingdom|civil}}\n|align=\"right\"|5,475\n|align=\"left\" |Sunk\n|align=\"left\" |{{sfn|Rohwer|1999|p=24}}\n|-\n|align=\"right\"|31 July 1940\n|align=\"left\" |''U-99''\n|align=\"left\" |''[[List of shipwrecks in July 1940#31 July|Jersey City]]''\n|align=\"left\" |{{flag|United Kingdom|civil}}\n|align=\"right\"|6,322\n|align=\"left\" |Sunk\n|align=\"left\" |{{sfn|Rohwer|1999|p=24}}\n|-\n|align=\"right\"|2 August 1940\n|align=\"left\" |''U-99''\n|align=\"left\" |''[[List of shipwrecks in August 1940#2 August|Alexia]]''\n|align=\"left\" |{{flag|United Kingdom|civil}}\n|align=\"right\"|8,016\n|align=\"left\" |Damaged\n|align=\"left\" |{{sfn|Rohwer|1999|p=24}}\n|-\n|align=\"right\"|2 August 1940\n|align=\"left\" |''U-99''\n|align=\"left\" |''[[List of shipwrecks in August 1940#2 August|Lucerna]]''\n|align=\"left\" |{{flag|United Kingdom|civil}}\n|align=\"right\"|6,556\n|align=\"left\" |Damaged\n|align=\"left\" |{{sfn|Rohwer|1999|p=24}}\n|-\n|align=\"right\"|2 August 1940\n|align=\"left\" |''U-99''\n|align=\"left\" |''[[List of shipwrecks in August 1940#2 August|Strinda]]''\n|align=\"left\" |{{flag|Norway}}\n|align=\"right\"|10,973\n|align=\"left\" |Damaged\n|align=\"left\" |{{sfn|Rohwer|1999|p=24}}\n|-\n|align=\"right\"|11 September 1940\n|align=\"left\" |''U-99''\n|align=\"left\" |''[[List of shipwrecks in September 1940#11 September|Albionic]]''\n|align=\"left\" |{{flag|United Kingdom|civil}}\n|align=\"right\"|2,468\n|align=\"left\" |Sunk\n|align=\"left\" |{{sfn|Rohwer|1999|p=28}}\n|-\n|align=\"right\"|15 September 1940\n|align=\"left\" |''U-99''\n|align=\"left\" |''[[List of shipwrecks in September 1940#15 September|Kenordoc]]''\n|align=\"left\" |{{flag|Canada|1921}}\n|align=\"right\"|1,780\n|align=\"left\" |Sunk\n|align=\"left\" |{{sfn|Rohwer|1999|p=28}}\n|-\n|align=\"right\"|16 September 1940\n|align=\"left\" |''U-99''\n|align=\"left\" |''[[List of shipwrecks in September 1940#16 September|Lotos]]''\n|align=\"left\" |{{flag|Norway}}\n|align=\"right\"|1,327\n|align=\"left\" |Sunk\n|align=\"left\" |{{sfn|Rohwer|1999|p=28}}\n|-\n|align=\"right\"|17 September 1940\n|align=\"left\" |''U-99''\n|align=\"left\" |{{SS|Crown Arun||2}}\n|align=\"left\" |{{flag|United Kingdom|civil}}\n|align=\"right\"|2,372\n|align=\"left\" |Sunk\n|align=\"left\" |{{sfn|Rohwer|1999|p=29}}\n|-\n|align=\"right\"|21 September 1940\n|align=\"left\" |''U-99''\n|align=\"left\" |''[[List of shipwrecks in September 1940#21 September|Baron Blythswood]]''\n|align=\"left\" |{{flag|United Kingdom|civil}}\n|align=\"right\"|3,668\n|align=\"left\" |Sunk\n|align=\"left\" |{{sfn|Rohwer|1999|p=29}}\n|-\n|align=\"right\"|21 September 1940\n|align=\"left\" |''U-99''\n|align=\"left\" |''[[List of shipwrecks in September 1940#21 September|Elmbank]]''\n|align=\"left\" |{{flag|United Kingdom|civil}}\n|align=\"right\"|5,156\n|align=\"left\" |Sunk\n|align=\"left\" |{{sfn|Rohwer|1999|p=29}}\n|-\n|align=\"right\"|21 September 1940\n|align=\"le